    <script>
        document.getElementById("searchForm").addEventListener("submit", (e) => {
            e.preventDefault();
            let x = document.getElementById('inputModalSearch');
            searchCatcher();
        });

        const suggestion = document.getElementById('suggestion')
        const findedProduct = document.getElementById('findedProduct')

        // searchbar
       function searchCatcher() {
           let searchData = document.getElementById('inputModalSearch');
           if(!searchData.value == ''){      
            axios.post('/searchProduct',{searchKey : searchData.value}).then(({data}) => {
            suggestion.innerHTML = ''
            data.forEach(element => {
                var newText = document.createTextNode(element.productName);
                var listItem = document.createElement("li");
                var link = document.createElement("a")
                link.style.textDecoration = "none"
                link.style.color = "black"
                link.href = (`/shopSingle/${element._id}`)
                link.target = "_blank"
                link.appendChild(newText)
                listItem.appendChild(link);
                suggestion.appendChild(listItem);
            });    
           }).catch((err) => {
            console.log(err);
           });
           }
           else{
            suggestion.innerHTML = ''
           }
       }
    </script>
